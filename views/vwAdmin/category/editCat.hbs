{{#if err_message}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        {{err_message}}
    </div>
{{/if}}
<h1>Edit category</h1>

<form class="was-validated" method="post">
    <input type="text" style="display:none" name="ID_FIELD" readonly value={{field.ID_FIELD}}>
    <card>
        <div class="card-body mb-3">
            <h4> <b>Field: </b>{{field.FIELDNAME}}</h4>

            <div class="form-group col-5">
                <label for="ID_CATE">Category Id</label>
                <input type="text" class="form-control is-invalid" id="ID_CATE" name="ID_CATE" readonly
                    value={{cat.ID_CATE}} />
            </div>
            <div class="form-group col-5">
                <label for="CATENAME">Field Name</label>
                <input type="text" class="form-control is-invalid" id="CATENAME" name="CATENAME" required
                    value={{cat.CATENAME}} />
            </div>
        </div>
    </card>
    <div class="card-footer">
        <button type="submit" class="btn btn-primary"   >
            <i class="fa fa-check" aria-hidden="true"></i>
            Save
        </button>
        <a class="btn btn-danger" data-toggle="modal" data-target="#basicModal">
            <i class="fa fa-trash" aria-hidden="true"></i>
            Delete
        </a>
    </div>
    <div class="modal fade" id="basicModal" tabindex="-1" role="dialog" aria-labelledby="basicModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="myModalLabel">Confirm</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h3>Do you want to detele it?</h3>
                </div>
                <div class="modal-footer">
                    <form action="" method="post">
                        <a type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</a>
                        <button type="submit" class="btn btn-danger" formaction="/admin/cat/delete"> <i
                                class=" fa fa-trash" aria-hidden="true"></i>
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>